extends layout

block append scripts
    script(src="/js/front-index.js")
    script(src="/js/front-login.js")

block page-wrapper
    .page-bg
        img(src='/img/index_bg.jpg')
    .page.index
        .page-wrapper
            .main-container
                .left-block
                    h1= title
                    p Welcome to Clitter
                .right-block
                    #login-form.span3
                        h4 Log In
                            p.red You have input wrong data
                        input(type="text", name="login_name", required="required", placeholder="Name", value= name)
                        input(type="password", name="login_pass", required="required", placeholder="Password")
                        button#sign-in.btn.btn-success Sign in
                        a#sugn-up.btn.btn-warning(href='/signup') Sign up
                .clr
